{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "prisma db push && tsc-watch --onSuccess \"node dist/index.js\"",
    "dev:tsx": "prisma db push && tsx src/index.ts",
    "build": "rm -rf dist && prisma generate && tsc && pnpm run postbuild",
    "build:prod": "rm -rf dist && prisma generate && tsc && pnpm run postbuild",
    "postbuild": "node -e \"const fs = require('fs'); if (!fs.existsSync('dist')) fs.mkdirSync('dist'); fs.copyFileSync('dist-package.json', 'dist/package.json');\"",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:generate:local": "prisma generate",
    "prisma:generate:prod": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:push:local": "prisma db push",
    "prisma:push:prod": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:local": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:reset": "tsx src/scripts/resetDatabase.ts",
    "clean": "rm -rf dist",
    "validate": "npm run type-check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext ts,js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,js --fix",
    "lint:check": "eslint . --ext ts,js --max-warnings 100",
    "performance:test": "npm run build && node dist/performance-test.js",
    "database:optimize": "node dist/scripts/optimize-database.js",
    "cache:clear": "node dist/scripts/clear-cache.js",
    "health:check": "node dist/scripts/health-check.js",
    "precommit": "npm run lint:check && npm run type-check && npm run test"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.18.8",
    "@types/ws": "^8.18.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "prisma": "^6.16.3",
    "telegraf": "^4.16.3",
    "typescript": "^5.9.3",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsc-watch": "^6.3.1",
    "tsx": "^4.20.6"
  }
}